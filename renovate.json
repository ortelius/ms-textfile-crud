{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:all"
  ],
  "ignorePaths": [
    "chart/**"
  ],
  "schedule": [
    "every 1 hours every weekday"
  ],
  "prHourlyLimit": 4,
  "groupName": "all dependencies",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "enabled": false
  },
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "automerge": true,
      "autoApprove": true,
      "matchPackageNames": [
        "/.*/"
      ]
    }
  ],
  "separateMajorMinor": false,
  "pinDigests": true,
  "poetry": {
    "enabled": true
  }
}
